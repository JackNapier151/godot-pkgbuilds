# Contributor: 

pkgname=(
	"godot2-stable-rc-src"
	# Godot GDScript
	"godot2-stable-rc-bin"
	"godot2-stable-rc-bin32"
	"godot2-stable-rc-server-bin"
	"godot2-stable-rc-export-templates-bin"
	"godot2-stable-rc-osx-bin"
	"godot2-stable-rc-win32-bin"
	"godot2-stable-rc-win64-bin"
	)
pkgver="2.1.6"
pkgrel=1
pkgdesc="Godot2 Game Engine: An advanced, feature packed, multi-platform 2D and 3D game engine."
url="http://www.godotengine.org"
license=("MIT")
groups=(
	"godot-full"
	"godot2"
	"godot21"
	"godot216"
	"godot-legazy"
	"godot-bin"
	"godot-stable-rc"
	"godot-gdscript"
)
arch=("any")
_monodepends=(
	"mono>=6.12.0"
	"dotnet-sdk"
	"msbuild"
)
depends=(
	"godot-base"
	"alsa-lib"
	"freetype2"
	"glu"
	"libxcursor"
	"libxinerama"
	"mesa"
)

source=("https://downloads.tuxfamily.org/godotengine/${pkgver}/godot-${pkgver}-stable.tar.xz")
noextract=("godot_v${pkgver}-stable.tar.xz")
sha512sums=("SKIP")
package_godot2-stable-rc-src(){
	pkgdesc+=" Stable Release Candidate SourceCode"
	groups+=(
		"godot-src"
	)
	install -Dm755 "${srcdir}/godot-${pkgver}-stable.tar.xz" "${pkgdir}/opt/godot/src/godot2-stable-rc.tar.xz"
}

source+=("https://downloads.tuxfamily.org/godotengine/${pkgver}/Godot_v${pkgver}-stable_x11.64.zip")
sha512sums+=("SKIP")
package_godot2-stable-rc-bin(){
	pkgdesc+=" Stable Release Candidate Binary Version"
	groups+=(
		"godot-standard"
		"godot-standard64"
		"godot-64"
	)
	install -Dm755 "${srcdir}/Godot_v${pkgver}-stable_x11.64" "${pkgdir}/opt/godot/godot2-stable-rc-bin"
	
	install -d "${pkgdir}/usr/bin/"
	ln -s "/opt/godot/godot2-stable-rc-bin" "${pkgdir}/usr/bin/godot2-stable-rc-bin"
	
	install -d "${pkgdir}/usr/share/applications/"
	cat > "${pkgdir}/usr/share/applications/godot2-stable-rc-bin.desktop" <<-EOF
		[Desktop Entry]
		Name=Godot2 Engine Stable Release Candidate Binary v${pkgver}
		GenericName="Advanced cross-platform 2D and 3D libre game engine. Stable Release Candidate Binary Version"
		Comment=Application for making games
		Exec=/usr/bin/godot2-stable-rc-bin %U
		Icon=godot
		Terminal=false
		Type=Application
		MimeType=application/x-godot-project;
		Categories=Development;IDE;
	EOF
}

source+=("https://downloads.tuxfamily.org/godotengine/${pkgver}/Godot_v${pkgver}-stable_x11.32.zip")
