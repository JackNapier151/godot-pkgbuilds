package_godot3-rc-server-mono-bin(){
	pkgdesc+=" Release Candidate Server Mono Binary Version"
	depends+=("${_monodepends}")
	groups+=(
		"godot-mono"
		"godot-server"
		"godot-64"
	)
	install -Dm755 "${srcdir}/Godot_v${_pkgver}-rc${_pkgverb}_mono_linux_server_64/Godot_v${_pkgver}-rc${_pkgverb}_mono_linux_server.64" "${pkgdir}/opt/godot/mono/rc/server/godot3-rc-server-mono-bin"
	cp -r "${srcdir}/Godot_v${_pkgver}-rc${_pkgverb}_mono_linux_server_64/data_Godot_v${_pkgver}-rc${_pkgverb}_mono_linux_server_64" "${pkgdir}/opt/godot/mono/rc/server/Godot3Sharp"
	
	install -d "${pkgdir}/usr/bin/"
	ln -s "/opt/godot/mono/rc/server/godot3-rc-server-mono-bin" "${pkgdir}/usr/bin/godot3-rc-server-mono-bin"
	
	install -d "${pkgdir}/usr/share/applications/"
	cat > "${pkgdir}/usr/share/applications/godot3-rc-server-mono-bin.desktop" <<-EOF
		[Desktop Entry]
		Name=Godot3 Server Engine Release Candidate Mono Binary v${_pkgver}-rc${_pkgverb}
		GenericName="Advanced cross-platform 2D and 3D libre game engine. Release Candidate Server Mono Binary Version"
		Comment=Application for making games
		Exec=/usr/bin/godot3-rc-server-bin %U
		Icon=godot
		Terminal=false
		Type=Application
		MimeType=application/x-godot-project;
		Categories=Development;IDE;
	EOF
}

