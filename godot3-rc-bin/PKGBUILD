source+=("https://downloads.tuxfamily.org/godotengine/${_pkgver}/rc${_pkgverb}/Godot_v${_pkgver}-rc${_pkgverb}_web_editor.zip")
noextract+=("Godot_v${_pkgver}-rc${_pkgverb}_web_editor.zip")
sha512sums+=("SKIP")
package_godot3-rc-web-bin(){
	pkgdesc+=" Release Candidate Web Binary Version"
	groups+=(
		"godot-gdscript"
		"godot-web"
	)
	unzip "Godot_v${_pkgver}-rc${_pkgverb}_web_editor.zip" -d "${srcdir}/godot3-rc-bin"
	install -d "${pkgdir}/opt/godot/web/godot3-rc-bin"
	cp -r "${srcdir}/godot3-rc-bin" "${pkgdir}/opt/godot/web/godot3-rc-bin"
}

