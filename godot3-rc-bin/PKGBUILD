pkgname=(
	"godot3-rc-src"
	# Godot GDScript
	"godot3-rc-bin"
	"godot3-rc-bin32"
	"godot3-rc-export-templates-bin"
	"libgodot3-rc-bin"
	"godot3-rc-web-bin"
	"godot3-rc-headless-bin"
	"godot3-rc-server-bin"
	"godot3-rc-osx-bin"
	"godot3-rc-win32-bin"
	"godot3-rc-win64-bin"
	"godot3-rc-android-bin"
	# Godot Mono
	"godot3-rc-mono-bin"
	"godot3-rc-mono-bin32"
	"godot3-rc-mono-export-templates-bin"
	"libgodot3-rc-mono-bin"
	"godot3-rc-headless-mono-bin"
	"godot3-rc-server-mono-bin"
	"godot3-rc-mono-osx-bin"
	"godot3-rc-mono-win32-bin"
	"godot3-rc-mono-win64-bin"
	)
_pkgver="3.5"
_pkgverb=8
pkgver="${_pkgver}rc${_pkgverb}"
pkgrel=1
pkgdesc="Godot3 Game Engine: An advanced, feature packed, multi-platform 2D and 3D game engine."
url="http://www.godotengine.org"
license=("MIT")
groups=(
	"godot-full"
	"godot3"
	"godot35"
	"godot-bin"
	"godot-rc"
)
arch=("any")
_monodepends=(
	"mono>=6.12.0"
	"dotnet-sdk"
	"msbuild"
)
depends=(
	"godot-base"
	"alsa-lib"
	"freetype2"
	"glu"
	"libxcursor"
	"libxinerama"
	"mesa"
)

source=("https://downloads.tuxfamily.org/godotengine/${_pkgver}/rc${_pkgverb}/godot-${_pkgver}-rc${_pkgverb}.tar.xz")
noextract=("godot-${_pkgver}-rc${_pkgverb}.tar.xz")
sha512sums=("SKIP")
package_godot3-rc-src(){
	pkgdesc+=" Release Candidate SourceCode"
	groups+=(
		"godot-src"
	)
	install -Dm755 "${srcdir}/godot-${_pkgver}-rc${_pkgverb}.tar.xz" "${pkgdir}/opt/godot/src/godot3-rc.tar.xz"
}

source+=("https://downloads.tuxfamily.org/godotengine/${_pkgver}/rc${_pkgverb}/Godot_v${_pkgver}-rc${_pkgverb}_x11.64.zip")
sha512sums+=("SKIP")
package_godot3-rc-bin(){
	pkgdesc+=" Release Candidate  Binary Version"
	groups+=(
		"godot-gdscript"
		"godot-standard"
		"godot-standard64"
		"godot-64"
	)
	install -Dm755 "${srcdir}/Godot_v${_pkgver}-rc${_pkgverb}_x11.64" "${pkgdir}/opt/godot/godot3-rc-bin"
	
	install -d "${pkgdir}/usr/bin/"
	ln -s "/opt/godot/godot3-rc-bin" "${pkgdir}/usr/bin/godot3-rc-bin"
	
	install -d "${pkgdir}/usr/share/applications/"
	cat > "${pkgdir}/usr/share/applications/godot3-rc-bin.desktop" <<-EOF
		[Desktop Entry]
		Name=Godot3 Engine Release Candidate Binary v${_pkgver}-rc${_pkgverb}
		GenericName="Advanced cross-platform 2D and 3D libre game engine. Release Candidate Binary Version"
		Comment=Application for making games
		Exec=/usr/bin/godot3-rc-bin %U
		Icon=godot
		Terminal=false
		Type=Application
		MimeType=application/x-godot-project;
		Categories=Development;IDE;
	EOF
}

