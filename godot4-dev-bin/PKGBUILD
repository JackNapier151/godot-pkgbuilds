pkgname+=(
	"godot-dev-src"
	##################
	# Godot GDScript #
	##################
	"godot-dev-bin"
	"godot-dev-bin32"
	"godot-dev-export-templates-bin"
	"libgodot-dev-bin"
	"godot-dev-osx-bin"
	"godot-dev-win32-bin"
	"godot-dev-win64-bin"
	)

pkgdescalt="Godot Game Engine: An advanced, feature packed, multi-platform 2D and 3D game engine."

package_godot-dev-src(){
	pkgdesc+="${pkgdescalt} Developed SourceCode"
	groups+=(
		"godot-src"
	)
	install -d "${pkgdir}/opt/godot/src/godot-dev/"
	cp -r "${srcdir}/godot-${_pkgver}-dev.${_pkgverb}/"* "${pkgdir}/opt/godot/src/godot-dev/"
}

##################
# Godot GDScript #
##################

package_godot-dev-bin(){
	pkgdesc+="${pkgdescalt} Developed Binary Version"
	groups+=(
		"godot-gdscript"
		"godot-standard"
		"godot-standard64"
		"godot-64"
	)
	install -Dm755 "${srcdir}/Godot_v${_pkgver}-dev.${_pkgverb}_linux.64" "${pkgdir}/opt/godot/godot-dev-bin"
	
	install -d "${pkgdir}/usr/bin/"
	ln -s "/opt/godot/godot-dev-bin" "${pkgdir}/usr/bin/godot-dev-bin"
	
	install -d "${pkgdir}/usr/share/applications/"
	cat > "${pkgdir}/usr/share/applications/godot-dev-bin.desktop" <<-EOF
		[Desktop Entry]
		Name=Godot Engine Dev Binary v${_pkgver}-dev${_pkgverb}
		GenericName="Advanced cross-platform 2D and 3D libre game engine. Developed Binary Version"
		Comment=Application for making games
		Exec=/usr/bin/godot-dev-bin %U
		Icon=godot
		Terminal=false
		Type=Application
		MimeType=application/x-godot-project;
		Categories=Development;IDE;
	EOF
	
}

