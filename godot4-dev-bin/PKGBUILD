# Godot4 #
##########
pkgname=(
	"godot4-dev-src"
	##################
	# Godot GDScript #
	##################
	"godot4-dev-bin"
	"godot4-dev-bin32"
	"godot4-dev-export-templates-bin"
	"libgodot4-dev-bin"
	"godot4-dev-osx-bin"
	"godot4-dev-win32-bin"
	"godot4-dev-win64-bin"
	)
_pkgver="4.0"
_pkgverb=20220118
#pkgver="${_pkgver}dev${_pkgverb}"
pkgver="${_pkgver}d${_pkgverb}"
pkgrel=1
pkgdesc="Godot4 Game Engine: An advanced, feature packed, multi-platform 2D and 3D game engine."
url="http://www.godotengine.org"
license=("MIT")
groups=(
	"godot-full"
	"godot4"
	"godot40"
	"godot-bin"
	"godot-dev"
	"godot-gdscript"
)
arch=("any")
_monodepends=(
	"mono>=6.12.0"
	"dotnet-sdk"
	"msbuild"
)
depends=(
	"godot-base"
	"alsa-lib"
	"freetype2"
	"glu"
	"libxcursor"
	"libxinerama"
	"mesa"
)

source=("https://downloads.tuxfamily.org/godotengine/${_pkgver}/pre-alpha/${_pkgver}-dev.${_pkgverb}/godot-${_pkgver}-dev.${_pkgverb}.tar.xz")
sha512sums=("SKIP")
package_godot4-dev-src(){
	pkgdesc+=" Developed SourceCode"
	groups+=(
		"godot-src"
	)
	install -d "${pkgdir}/opt/godot/src/godot4-dev/"
	cp -r "${srcdir}/godot-${_pkgver}-dev.${_pkgverb}/"* "${pkgdir}/opt/godot/src/godot4-dev/"
}

##################
# Godot GDScript #
##################

source+=("https://downloads.tuxfamily.org/godotengine/${_pkgver}/pre-alpha/${_pkgver}-dev.${_pkgverb}/Godot_v${_pkgver}-dev.${_pkgverb}_linux.64.zip")
sha512sums+=("SKIP")
package_godot4-dev-bin(){
	pkgdesc+=" Developed Binary Version"
	groups+=(
		"godot-gdscript"
		"godot-standard"
		"godot-standard64"
		"godot-64"
	)
	install -Dm755 "${srcdir}/Godot_v${_pkgver}-dev.${_pkgverb}_linux.64" "${pkgdir}/opt/godot/godot4-dev-bin"
	
	install -d "${pkgdir}/usr/bin/"
	ln -s "/opt/godot/godot4-dev-bin" "${pkgdir}/usr/bin/godot4-dev-bin"
	
	install -d "${pkgdir}/usr/share/applications/"
	cat > "${pkgdir}/usr/share/applications/godot4-dev-bin.desktop" <<-EOF
		[Desktop Entry]
		Name=Godot4 Engine Dev Binary v${_pkgver}-dev${_pkgverb}
		GenericName="Advanced cross-platform 2D and 3D libre game engine. Developed Binary Version"
		Comment=Application for making games
		Exec=/usr/bin/godot4-dev-bin %U
		Icon=godot
		Terminal=false
		Type=Application
		MimeType=application/x-godot-project;
		Categories=Development;IDE;
	EOF
	
}

