	EOF
}

package_godotlts-alpha-mono-bin32(){
	pkgdesc+="${pkgdesclts} LTS Alpha Mono Binary Version 32b"
	depends+=("${_monodepends}")
	groups+=(
		"godot-lts"
		"godot-mono"
		"godot-standard"
		"godot-standard32"
		"godot-32"
	)
	install -Dm755 "${srcdir}/Godot_v${_pkgver}-alpha${_pkgverb}_mono_x11_32/Godot_v${_pkgver}-alpha${_pkgverb}_mono_x11.32" "${pkgdir}/opt/godot/mono/godotlts/alpha/bin/desktop32/godotlts-alpha-mono-bin32"
	cp -r "${srcdir}/Godot_v${_pkgver}-alpha${_pkgverb}_mono_x11_32/GodotSharp" "${pkgdir}/opt/godot/mono/godotlts/alpha/bin/desktop32/GodotSharp"
	ln -s "/opt/godot/mono/godotlts/alpha/bin/desktop32/godotlts-alpha-mono-bin32" "${pkgdir}/opt/godot/godotlts-alpha-mono-bin32"
	
	install -d "${pkgdir}/usr/bin/"
	ln -s "/opt/godot/mono/godotlts/alpha/bin/desktop32/godotlts-alpha-mono-bin32" "${pkgdir}/usr/bin/godotlts-alpha-mono-bin32"
	
	install -d "${pkgdir}/usr/share/applications/"
	cat > "${pkgdir}/usr/share/applications/godotlts-alpha-mono-bin32.desktop" <<-EOF
		[Desktop Entry]
		Name=Godot LTS Engine Release Candidate Mono Binary v${_pkgver}-alpha${_pkgverb} 32b
		GenericName="Advanced cross-platform 2D and 3D libre game engine. LTS Release Candidate Mono Binary Version 32b"
		Comment=Application for making games.
		Exec=/usr/bin/godotlts-alpha-mono-bin32 %U
		Icon=godot
		Terminal=false
		Type=Application
		MimeType=application/x-godot-project;
		Categories=Development;IDE;
	EOF
}

