##############
# Godot Mono #
##############
source+=("https://downloads.tuxfamily.org/godotengine/${_pkgver}/alpha${_pkgverb}/mono/Godot_v${_pkgver}-alpha${_pkgverb}_mono_x11_64.zip")
sha512sums+=("SKIP")
package_godot3-alpha-mono-bin(){
	pkgdesc+=" Alpha Mono Binary Version"
	depends+=("${_monodepends}")
	groups+=(
		"godot-mono"
		"godot-standard"
		"godot-standard64"
		"godot-64"
	)
	install -Dm755 "${srcdir}/Godot_v${_pkgver}-alpha${_pkgverb}_mono_x11_64/Godot_v${_pkgver}-alpha${_pkgverb}_mono_x11.64" "${pkgdir}/opt/godot/mono/godot3/alpha/bin/desktop/godot3-alpha-mono-bin"
	cp -r "${srcdir}/Godot_v${_pkgver}-alpha${_pkgverb}_mono_x11_64/GodotSharp" "${pkgdir}/opt/godot/mono/godot3/alpha/bin/desktop/GodotSharp"
	ln -s "/opt/godot/mono/godot3/alpha/bin/desktop/godot3-alpha-mono-bin" "${pkgdir}/opt/godot/godot3-alpha-mono-bin"
	
	install -d "${pkgdir}/usr/bin/"
	ln -s "/opt/godot/mono/godot3/alpha/bin/desktop/godot3-alpha-mono-bin" "${pkgdir}/usr/bin/godot3-alpha-mono-bin"
	
	install -d "${pkgdir}/usr/share/applications/"
	cat > "${pkgdir}/usr/share/applications/godot3-alpha-mono-bin.desktop" <<-EOF
		[Desktop Entry]
		Name=Godot3 Engine Release Candidate Mono Binary v${_pkgver}-alpha${_pkgverb}
		GenericName="Advanced cross-platform 2D and 3D libre game engine. Release Candidate Mono Binary Version"
		Comment=Application for making games.
		Exec=/usr/bin/godot3-alpha-mono-bin %U
		Icon=godot
		Terminal=false
		Type=Application
		MimeType=application/x-godot-project;
		Categories=Development;IDE;
	EOF
}

